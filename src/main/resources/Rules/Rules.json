{
  "rules": [
    {
      "type": "CustomerTypeRule",
      "customerType": "3DS",
      "action": {
        "type": "AuthenticationAction",
        "3dslastyear" : true,
        "messageTemplate": "Waive off 3DS for transaction : {dsEnabled}"
      }
    },
    {
      "type": "PaymentMethodRule",
      "location": "NORWAY",
      "action": {
        "type": "PaymentMethodAction",
        "messageTemplate": "Available Payment methods in {location} are : VIPPS"
      }
    },
    {
      "type": "TransactionAmountRule",
      "minAmount": 100.0,
      "maxAmount": 100000.0,
      "action": {
        "type": "AdditionalInfoAction",
        "thresholdAmount": 10000.0,
        "location": ["X","Y"],
        "messageTemplate": "Transaction amount exceeds the threshold amount: {thresholdAmount}, additional verification required"
      }
    },
    {
      "type": "CardTypeRule",
      "cardType": "Credit Card",
      "action": {
        "type": "AdditionalFeeAction",
        "thresholdAmount": 10000.0,
        "messageTemplate": "2% of transaction amount {amount} fee would be applicable"
      }
    },
    {
      "type": "NewFeatureRule",
      "customerType": "Employee",
      "action": {
        "type": "FeatureAction",
        "messageTemplate": "Enable new feature"
      }
    },
    {
      "type": "PaymentCardNetworkRule",
      "paymentNetwork": "Mastercard",
      "currency": "SEK",
      "action": {
        "type": "RoutingAction",
        "currency": "SEK",
        "messageTemplate": "20% of transactions routed to Acquirer A. 50% transactions routed to Acquirer B. 30% of transactions routed to Acquirer C"
      }
    }
  ]
}